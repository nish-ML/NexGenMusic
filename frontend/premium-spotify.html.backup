<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spotify - NexGenMusic</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <style>
        #canvas3d { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 0; pointer-events: none; }
        .header, .container { position: relative; z-index: 1; }
        .header { background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); }
        .connect-card, .track-card { background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); }
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        :root {
            --bg-primary: #ffffff; --bg-secondary: #f8f9fa; --bg-hover: #f1f3f5;
            --text-primary: #1e293b; --text-secondary: #64748b; --border-color: #e2e8f0;
            --accent-green: #1DB954; --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05); --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
        }
        body { font-family: 'Inter', sans-serif; background: var(--bg-secondary); color: var(--text-primary); }
        .header { background: var(--bg-primary); border-bottom: 1px solid var(--border-color); padding: 16px 24px; display: flex; align-items: center; justify-content: space-between; position: sticky; top: 0; z-index: 100; box-shadow: var(--shadow-sm); }
        .logo { display: flex; align-items: center; gap: 12px; font-size: 20px; font-weight: 700; text-decoration: none; color: var(--text-primary); }
        .back-btn { padding: 8px 16px; background: var(--bg-secondary); border: 1px solid var(--border-color); border-radius: 8px; text-decoration: none; font-size: 14px; font-weight: 500; transition: all 0.2s ease; color: var(--text-primary); }
        .back-btn:hover { background: var(--bg-hover); }
        .container { max-width: 1200px; margin: 0 auto; padding: 40px 24px; }
        .page-header { text-align: center; margin-bottom: 48px; }
        .page-title { font-size: 36px; font-weight: 700; margin-bottom: 12px; color: var(--accent-green); }
        .page-subtitle { font-size: 16px; color: var(--text-secondary); }
        .connect-card { background: var(--bg-primary); border: 1px solid var(--border-color); border-radius: 16px; padding: 60px 40px; text-align: center; max-width: 600px; margin: 0 auto 32px; box-shadow: var(--shadow-md); }
        .spotify-icon { font-size: 80px; margin-bottom: 24px; }
        .connect-title { font-size: 24px; font-weight: 700; margin-bottom: 12px; }
        .connect-text { font-size: 15px; color: var(--text-secondary); margin-bottom: 32px; }
        .btn-spotify { padding: 16px 32px; background: var(--accent-green); border: none; border-radius: 24px; color: white; font-size: 16px; font-weight: 600; cursor: pointer; transition: all 0.3s ease; box-shadow: 0 4px 12px rgba(29, 185, 84, 0.3); }
        .btn-spotify:hover { transform: translateY(-2px); box-shadow: 0 8px 20px rgba(29, 185, 84, 0.4); }
        .recommendations-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 24px; }
        .track-card { background: var(--bg-primary); border: 1px solid var(--border-color); border-radius: 12px; overflow: hidden; transition: all 0.2s ease; }
        .track-card:hover { box-shadow: var(--shadow-md); transform: translateY(-2px); }
        .track-info { padding: 20px; }
        .track-title { font-size: 18px; font-weight: 600; margin-bottom: 6px; color: var(--text-primary); }
        .track-artist { font-size: 14px; color: var(--text-secondary); margin-bottom: 20px; }
        .spotify-player { width: 100%; height: 152px; border: none; border-radius: 12px; background: #f8f9fa; }
        .play-info { font-size: 11px; color: var(--text-secondary); text-align: center; margin-top: 8px; }
        .no-player-msg { padding: 20px; text-align: center; background: var(--bg-secondary); border-radius: 8px; color: var(--text-secondary); font-size: 13px; }
    </style>
</head>
<body>
    <canvas id="canvas3d"></canvas>
    <header class="header">
        <a href="/dashboard/" class="logo"><span style="font-size: 28px;">üéµ</span><span>NexGenMusic</span></a>
        <a href="/dashboard/" class="back-btn">‚Üê Back to Dashboard</a>
    </header>
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">üéß Spotify Recommendations</h1>
            <p class="page-subtitle">Get personalized music suggestions from Spotify</p>
        </div>
        <!-- Mood & Language Selector -->
        <div class="connect-card">
            <h2 class="connect-title">üé≠ Select Your Preferences</h2>
            <p class="connect-text">Choose your mood and language to get personalized song recommendations</p>
            
            <!-- Language Selector -->
            <div style="margin-top: 24px; margin-bottom: 20px;">
                <label style="display: block; font-size: 14px; font-weight: 600; margin-bottom: 10px; color: var(--text-primary);">
                    üåç Language
                </label>
                <select id="languageSelect" style="width: 100%; padding: 12px 16px; border: 1px solid var(--border-color); border-radius: 8px; font-size: 14px; background: var(--bg-secondary); font-family: 'Inter', sans-serif;">
                    <option value="english">English</option>
                    <option value="hindi">Hindi (‡§π‡§ø‡§Ç‡§¶‡•Ä)</option>
                    <option value="tamil">Tamil (‡Æ§‡ÆÆ‡Æø‡Æ¥‡Øç)</option>
                    <option value="spanish">Spanish (Espa√±ol)</option>
                    <option value="french">French (Fran√ßais)</option>
                    <option value="german">German (Deutsch)</option>
                    <option value="japanese">Japanese (Êó•Êú¨Ë™û)</option>
                    <option value="korean">Korean (ÌïúÍµ≠Ïñ¥)</option>
                    <option value="portuguese">Portuguese (Portugu√™s)</option>
                </select>
            </div>
            
            <!-- Mood Selector -->
            <div>
                <label style="display: block; font-size: 14px; font-weight: 600; margin-bottom: 10px; color: var(--text-primary);">
                    üòä Mood
                </label>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); gap: 12px;">
                    <button class="mood-btn" onclick="getRecommendations('happy')">üòä Happy</button>
                    <button class="mood-btn" onclick="getRecommendations('sad')">üò¢ Sad</button>
                    <button class="mood-btn" onclick="getRecommendations('energetic')">‚ö° Energetic</button>
                    <button class="mood-btn" onclick="getRecommendations('calm')">üòå Calm</button>
                    <button class="mood-btn" onclick="getRecommendations('romantic')">‚ù§Ô∏è Romantic</button>
                    <button class="mood-btn" onclick="getRecommendations('party')">üéâ Party</button>
                </div>
            </div>
        </div>
        
        <!-- Loading State -->
        <div id="loadingState" style="display: none; text-align: center; padding: 40px;">
            <div style="font-size: 48px; margin-bottom: 16px;">üéµ</div>
            <div style="font-size: 18px; color: var(--text-secondary);">Finding perfect songs for you...</div>
        </div>
        
        <!-- Recommendations Grid -->
        <div class="recommendations-grid" id="recommendationsGrid"></div>
    </div>
    
    <style>
        .mood-btn {
            padding: 16px;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            background: var(--bg-primary);
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 14px;
            font-weight: 600;
        }
        .mood-btn:hover {
            border-color: var(--accent-green);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }
    </style>
    
    <script>
        async function getRecommendations(mood) {
            const loadingState = document.getElementById('loadingState');
            const grid = document.getElementById('recommendationsGrid');
            const language = document.getElementById('languageSelect').value;
            
            // Show loading
            loadingState.style.display = 'block';
            grid.innerHTML = '';
            
            const token = localStorage.getItem('access_token');
            
            try {
                const response = await fetch('/api/generate/', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ mood, language })
                });
                
                if (response.ok) {
                    const data = await response.json();
                    loadingState.style.display = 'none';
                    
                    // Display single recommendation
                    if (data.spotify_url) {
                        displayRecommendation(data);
                    }
                    
                    // Get more recommendations
                    await getMoreRecommendations(mood, language);
                } else {
                    loadingState.style.display = 'none';
                    alert('Failed to get recommendations. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                loadingState.style.display = 'none';
                alert('Network error. Please try again.');
            }
        }
        
        async function getMoreRecommendations(mood, language) {
            const genres = ['pop', 'rock', 'jazz', 'electronic', 'classical'];
            const grid = document.getElementById('recommendationsGrid');
            
            for (const genre of genres) {
                try {
                    const token = localStorage.getItem('access_token');
                    const response = await fetch('/api/generate/', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${token}`
                        },
                        body: JSON.stringify({ mood, genre, language })
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        displayRecommendation(data);
                    }
                } catch (error) {
                    console.error('Error fetching genre:', genre, error);
                }
            }
        }
        
        function displayRecommendation(data) {
            const grid = document.getElementById('recommendationsGrid');
            const card = document.createElement('div');
            card.className = 'track-card';
            
            // Extract Spotify track ID from URL
            const trackId = extractSpotifyTrackId(data.spotify_url);
            
            card.innerHTML = `
                <div class="track-info">
                    <div class="track-title">${data.song_name || 'Unknown Song'}</div>
                    <div class="track-artist">${data.artist_name || 'Unknown Artist'}</div>
                    ${trackId ? `
                        <iframe class="spotify-player" 
                                src="https://open.spotify.com/embed/track/${trackId}?utm_source=generator&theme=0" 
                                frameborder="0" 
                                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                                loading="lazy">
                        </iframe>
                        <div class="play-info">‚ñ∂Ô∏è Click play button above to listen</div>
                    ` : `
                        <div class="no-player-msg">
                            üéµ Player not available for this track
                        </div>
                    `}
                </div>
            `;
            grid.appendChild(card);
        }
        
        function extractSpotifyTrackId(url) {
            if (!url) return null;
            
            // Handle different Spotify URL formats
            // https://open.spotify.com/track/TRACK_ID
            // spotify:track:TRACK_ID
            
            const patterns = [
                /spotify\.com\/track\/([a-zA-Z0-9]+)/,
                /spotify:track:([a-zA-Z0-9]+)/
            ];
            
            for (const pattern of patterns) {
                const match = url.match(pattern);
                if (match && match[1]) {
                    return match[1];
                }
            }
            
            return null;
        }
        
        // 3D Background - Enhanced Spotify Theme with Dark Green
        let scene, camera, renderer, waves = [], musicBars = [], spotifyLogos = [], particles = [];
        function init3D() {
            scene = new THREE.Scene();
            // Opal Green gradient background
            scene.background = new THREE.Color(0xd4f1e8);
            scene.fog = new THREE.Fog(0xd4f1e8, 20, 60);
            
            camera = new THREE.PerspectiveCamera(50, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(0, 5, 15);
            
            renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('canvas3d'), antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            
            // Opal Green Lights
            scene.add(new THREE.AmbientLight(0xffffff, 0.6));
            const light1 = new THREE.DirectionalLight(0x7dd3c0, 1.2);
            light1.position.set(5, 10, 5);
            scene.add(light1);
            const light2 = new THREE.DirectionalLight(0x5fb8a8, 0.8);
            light2.position.set(-5, 8, -3);
            scene.add(light2);
            
            // Animated waveform bars (more bars)
            for (let i = 0; i < 30; i++) {
                const height = 1 + Math.random() * 4;
                const geo = new THREE.BoxGeometry(0.4, height, 0.4);
                const mat = new THREE.MeshStandardMaterial({ 
                    color: 0x7dd3c0, 
                    emissive: 0x7dd3c0, 
                    emissiveIntensity: 0.5,
                    metalness: 0.4,
                    roughness: 0.3
                });
                const bar = new THREE.Mesh(geo, mat);
                bar.position.set((i - 15) * 0.7, height / 2, -12);
                bar.userData.baseHeight = height;
                bar.userData.speed = 0.5 + Math.random() * 1;
                scene.add(bar);
                musicBars.push(bar);
            }
            
            // Large sound wave rings
            for (let i = 0; i < 8; i++) {
                const geo = new THREE.TorusGeometry(4 + i * 2.5, 0.15, 16, 100);
                const mat = new THREE.MeshStandardMaterial({ 
                    color: 0x7dd3c0, 
                    emissive: 0x7dd3c0,
                    emissiveIntensity: 0.4,
                    transparent: true, 
                    opacity: 0.5 - i * 0.05
                });
                const wave = new THREE.Mesh(geo, mat);
                wave.position.set(0, 5, -25);
                wave.rotation.x = Math.PI / 2;
                wave.userData.speed = 0.3 + i * 0.1;
                scene.add(wave);
                waves.push(wave);
            }
            
            // Floating Spotify logo spheres
            for (let i = 0; i < 25; i++) {
                const geo = new THREE.SphereGeometry(0.4, 16, 16);
                const mat = new THREE.MeshStandardMaterial({ 
                    color: 0x7dd3c0, 
                    emissive: 0x7dd3c0, 
                    emissiveIntensity: 0.5,
                    metalness: 0.6,
                    roughness: 0.2
                });
                const logo = new THREE.Mesh(geo, mat);
                logo.position.set(
                    (Math.random() - 0.5) * 35,
                    Math.random() * 15,
                    (Math.random() - 0.5) * 35
                );
                logo.userData.speed = 0.3 + Math.random() * 0.5;
                logo.userData.time = Math.random() * Math.PI * 2;
                scene.add(logo);
                spotifyLogos.push(logo);
            }
            
            // Particle field
            const particleCount = 150;
            const geometry = new THREE.BufferGeometry();
            const positions = new Float32Array(particleCount * 3);
            for (let i = 0; i < particleCount; i++) {
                positions[i * 3] = (Math.random() - 0.5) * 50;
                positions[i * 3 + 1] = Math.random() * 20;
                positions[i * 3 + 2] = (Math.random() - 0.5) * 50;
            }
            geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
            const material = new THREE.PointsMaterial({
                size: 0.15,
                color: 0xa8e6d7,
                transparent: true,
                opacity: 0.6,
                blending: THREE.AdditiveBlending
            });
            const particleSystem = new THREE.Points(geometry, material);
            scene.add(particleSystem);
            particles.push(particleSystem);
            
            window.addEventListener('resize', () => { 
                camera.aspect = window.innerWidth / window.innerHeight; 
                camera.updateProjectionMatrix(); 
                renderer.setSize(window.innerWidth, window.innerHeight); 
            });
            animate3D();
        }
        
        function animate3D() {
            requestAnimationFrame(animate3D);
            const time = Date.now() * 0.001;
            
            // Animate waveform bars with rhythm
            musicBars.forEach((bar, i) => { 
                bar.scale.y = 1 + Math.sin(time * bar.userData.speed * 2 + i * 0.3) * 0.8;
                bar.position.y = bar.userData.baseHeight / 2 * bar.scale.y;
            });
            
            // Animate sound waves - expand and pulse
            waves.forEach((w, i) => { 
                const scale = 1 + Math.sin(time * w.userData.speed + i * 0.5) * 0.15;
                w.scale.set(scale, scale, 1);
                w.rotation.z += 0.002;
            });
            
            // Animate Spotify logos - float and rotate
            spotifyLogos.forEach(logo => {
                logo.userData.time += logo.userData.speed * 0.01;
                logo.position.y += Math.sin(logo.userData.time) * 0.02;
                logo.rotation.y += 0.02;
                logo.rotation.x = Math.sin(logo.userData.time * 0.5) * 0.3;
            });
            
            // Rotate particles
            particles.forEach(p => {
                p.rotation.y += 0.001;
            });
            
            renderer.render(scene, camera);
        }
        init3D();
    </script>

    <!-- 3D Background Animation Script -->
    <script src="/static/js/3d-background-simple.js"></script>
</body>
</html>
