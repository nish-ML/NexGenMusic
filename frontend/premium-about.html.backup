    <script>
        // 3D Background - Milky Yellow Theme
        let scene, camera, renderer, stars = [], musicNotes = [], lightBeams = [];
        
        function init3D() {
            scene = new THREE.Scene();
            // Solar Pink gradient background
            scene.background = new THREE.Color(0xffe0f0);
            scene.fog = new THREE.Fog(0xffe0f0, 20, 60);
            
            camera = new THREE.PerspectiveCamera(50, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(0, 5, 15);
            
            renderer = new THREE.WebGLRenderer({ canvas: document.getElementById('canvas3d'), antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            
            // Solar Pink lighting
            scene.add(new THREE.AmbientLight(0xffffff, 0.5));
            const light1 = new THREE.DirectionalLight(0xff69b4, 1.2);
            light1.position.set(5, 10, 5);
            scene.add(light1);
            const light2 = new THREE.DirectionalLight(0xff1493, 0.8);
            light2.position.set(-5, 8, -3);
            scene.add(light2);
            
            // Pink stars
            for (let i = 0; i < 40; i++) {
                const geo = new THREE.OctahedronGeometry(0.3, 0);
                const mat = new THREE.MeshStandardMaterial({ 
                    color: 0xff69b4, 
                    emissive: 0xff69b4, 
                    emissiveIntensity: 0.6,
                    metalness: 0.8,
                    roughness: 0.2
                });
                const star = new THREE.Mesh(geo, mat);
                star.position.set(
                    (Math.random() - 0.5) * 40,
                    Math.random() * 20,
                    (Math.random() - 0.5) * 40
                );
                star.userData.speed = 0.5 + Math.random() * 0.5;
                scene.add(star);
                stars.push(star);
            }
            
            // Floating music symbols (solar pink colors)
            const colors = [0xff69b4, 0xff1493, 0xec4899, 0xff85c1];
            for (let i = 0; i < 30; i++) {
                const geo = new THREE.SphereGeometry(0.4, 16, 16);
                const mat = new THREE.MeshStandardMaterial({ 
                    color: colors[i % colors.length], 
                    emissive: colors[i % colors.length], 
                    emissiveIntensity: 0.4,
                    transparent: true,
                    opacity: 0.8
                });
                const note = new THREE.Mesh(geo, mat);
                note.position.set(
                    (Math.random() - 0.5) * 35,
                    Math.random() * 15,
                    (Math.random() - 0.5) * 35
                );
                note.userData.speed = 0.3 + Math.random() * 0.4;
                note.userData.time = Math.random() * Math.PI * 2;
                scene.add(note);
                musicNotes.push(note);
            }
            
            // Pink light beam rings
            for (let i = 0; i < 6; i++) {
                const geo = new THREE.TorusGeometry(3 + i * 2, 0.12, 16, 100);
                const mat = new THREE.MeshStandardMaterial({ 
                    color: 0xff69b4, 
                    emissive: 0xff69b4,
                    emissiveIntensity: 0.5,
                    transparent: true, 
                    opacity: 0.4 - i * 0.05
                });
                const beam = new THREE.Mesh(geo, mat);
                beam.position.set(0, 5 + i, -20);
                beam.rotation.x = Math.PI / 2;
                scene.add(beam);
                lightBeams.push(beam);
            }
            
            // Pink particle field
            const particleCount = 120;
            const geometry = new THREE.BufferGeometry();
            const positions = new Float32Array(particleCount * 3);
            for (let i = 0; i < particleCount; i++) {
                positions[i * 3] = (Math.random() - 0.5) * 50;
                positions[i * 3 + 1] = Math.random() * 20;
                positions[i * 3 + 2] = (Math.random() - 0.5) * 50;
            }
            geometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
            const material = new THREE.PointsMaterial({
                size: 0.12,
                color: 0xff85c1,
                transparent: true,
                opacity: 0.6
            });
            const particleSystem = new THREE.Points(geometry, material);
            scene.add(particleSystem);
            
            window.addEventListener('resize', () => { 
                camera.aspect = window.innerWidth / window.innerHeight; 
                camera.updateProjectionMatrix(); 
                renderer.setSize(window.innerWidth, window.innerHeight); 
            });
            animate3D();
        }
        
        function animate3D() {
            requestAnimationFrame(animate3D);
            const time = Date.now() * 0.001;
            
            // Animate stars - twinkle and rotate
            stars.forEach((star, i) => {
                star.rotation.y += 0.02;
                star.rotation.x += 0.01;
                star.position.y += Math.sin(time * star.userData.speed + i) * 0.01;
            });
            
            // Animate music notes - float and bob
            musicNotes.forEach(note => {
                note.userData.time += note.userData.speed * 0.01;
                note.position.y += Math.sin(note.userData.time) * 0.02;
                note.rotation.y += 0.02;
                note.rotation.x = Math.sin(note.userData.time * 0.5) * 0.3;
            });
            
            // Animate light beams - pulse and rotate
            lightBeams.forEach((beam, i) => {
                const scale = 1 + Math.sin(time * 0.5 + i * 0.5) * 0.1;
                beam.scale.set(scale, scale, 1);
                beam.rotation.z += 0.003;
            });
            
            renderer.render(scene, camera);
        }
        
        init3D();
    </script>

